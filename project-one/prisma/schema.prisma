// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// model represent the table in a Database
// each model row represents a db field
// a field is divided in four parts
// 1. name 2. Type of Field 3. (optional) field modifier 4. attributes

model User {
  id       String       @id @default(uuid())
  name     String
  BlogPost BlogPost[]
}

model BlogPost {
  id      String    @id @default(uuid())
  title   String @db.VarChar(200)
  content String @db.VarChar(200)
  author  User   @relation(fields: [userId], references: [id])
  userId  String
}
